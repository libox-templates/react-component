{
  "name": "<%= name %>",
  "version": "0.1.0",
  "description": "<%= description %>",
  "main": "dist/index.common.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "examples",
    "src",
    "tsconfig.json"
  ],
  "scripts": {
    "dev": "docz dev",
    "start:doc": "docz build && docz serve",
    "build:package": "rollup -c",
    "build:doc": "docz build",
    "ghpages": "npm run build:doc && gh-pages -d .docz/dist",
    "lint": "eslint '{src,docs,examples}/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix '{src,docs,examples}/**/*.{ts,tsx}'",
    "test": "jest"
  },
  "keywords": [
    "<%= componentName %>",
    "Component",
    "React Component"
  ],
  "author": "<%- author %>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-typescript": "^2.0.1",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.14",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "docz": "^2.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "gatsby-plugin-less": "^3.0.14",
    "gh-pages": "^2.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "less": "^3.10.3",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.27.8",
    "ts-jest": "^24.2.0"
  },
  "peerDependencies": {
    "react": "^16.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/<%- user %>/<%= name %>.git"
  },
  "bugs": {
    "url": "https://github.com/<%- user %>/<%= name %>/issues"
  },
  "homepage": "https://github.com/<%- user %>/<%= name %>"
}
